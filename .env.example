# Platform Selection
# Options: 'Android' or 'iOS'
PLATFORM=iOS

# Device Configuration
# Android Device Settings
DEVICE_NAME=Android Emulator
PLATFORM_VERSION=12.0

# iOS Device Settings
IOS_DEVICE_NAME=iPhone 16 Pro
IOS_PLATFORM_VERSION=18.0

# Test Login Credentials (use test accounts only!)
TEST_EMAIL=test@example.com
TEST_PASSWORD=password123

# App Paths
# Absolute path to your Android APK file
APP_ANDROID_PATH=/Users/username/path/to/your-app/build/app/outputs/flutter-apk/app-debug.apk

# Absolute path to your iOS app
APP_IOS_PATH=/Users/username/path/to/your-app/build/ios/iphonesimulator/Runner.app

# Advanced Settings
# Appium Server Configuration
APPIUM_HOST=localhost
APPIUM_PORT=4723

# Timeouts (in milliseconds)
COMMAND_TIMEOUT=300000
LAUNCH_TIMEOUT=120000
CONNECTION_TIMEOUT=120000

# Screenshot Settings
TAKE_SCREENSHOTS_ON_FAILURES=true
SCREENSHOT_PATH=./screenshots

# Test Data
TEST_DATA_PATH=./test/data
USE_MOCKS=false

# CI/CD Settings
# Set to true when running in CI environment
CI_MODE=false